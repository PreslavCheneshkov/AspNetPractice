@using CarOffers.Core.Models
@model List<OfferSearchModel>


@if (Model.Count() == 0)
{
    <h1>There are no matching results.</h1>
}
<ul>
@foreach(var offer in Model)
{
    <li >
        @if (offer.Manufacturer != null)
            {
                <h2>@offer.Manufacturer</h2>
            }
        @if (offer.Model != null)
            {
                <h2>@offer.Model</h2>
            }
        @if (offer.Mileage != null)
            {
                <h2>@offer.Mileage</h2>
            }
        @if (offer.Year != null)
            {
                 <h2>@offer.Year</h2>
            }
        @if (offer.Price != null)
            {
                <h2>@offer.Price</h2>
            }
    </li>
}
</ul>